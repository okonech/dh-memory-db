{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Memory dbjest debug",
            // ===== common options
            "args": [
                "--coverage",
                "false"
            ],
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "skipFiles": [
                "<node_internals>/**/*.js",
                "node_modules",
            ]
        }
    ]
}